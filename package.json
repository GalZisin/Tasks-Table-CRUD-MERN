{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm run prod",
        "server": "node dist-server/server.js",
        "dev": "SET NODE_ENV=development&&npm-run-all server",
        "prod": "set NODE_ENV=production&&npm-run-all server",
        "watch:dev": "nodemon",
        "build-tsc": "tsc -p .",
        "build-client": "cd client && npm run build",
        "install-client": "cd client && npm install",
        "client": "npm start --prefix client",
        "dev-concurrently": "concurrently -n 'server,client' -c 'red,green' \"npm run watch:dev\" \"npm run client\"",
        "heroku-postbuild": "npm run install-client && npm run build-client"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^6.1.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^9.0.2",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.1",
        "mongoose": "^5.12.10",
        "morgan": "^1.10.0",
        "node-sass": "^6.0.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "validator": "^13.6.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/mongoose": "^5.10.5",
        "@types/morgan": "^1.9.2",
        "@types/node": "^15.3.0",
        "@types/react": "^17.0.6",
        "@types/requirejs": "^2.1.32",
        "@types/validator": "^13.1.4",
        "nodemon": "^2.0.7",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "typescript": "^4.2.4"
    },
    "engines": {
        "node": "14.16.0"
    },
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "src/*",
            "client/*"
        ],
        "ignore": [
            "**/__tests__/**",
            "*.test.js",
            "*.spec.js"
        ]
    }
}
